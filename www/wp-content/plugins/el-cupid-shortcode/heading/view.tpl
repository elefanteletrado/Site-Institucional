<article class="el-article">
    <h1>{title}</h1>
    <p>{text}</p>
    <div class="visible-xs-block">
        <div id="owl-carousel-devices" class="el-carousel-devices">
            <!-- BEGIN BLOCK_IMAGE_MOBILE -->
            <img src="{image_mobile_src}" width="450" height="453" title="{image_mobile_title}">
            <!-- END BLOCK_IMAGE_MOBILE -->
        </div>
    </div>
    <div class="hidden-xs">
        <!-- BEGIN BLOCK_IMAGE -->
        <img src="{image_src}" alt="{image_title}" class="img-style-1" />
        <!-- END BLOCK_IMAGE -->
    </div>
    <div class="el-box-special">
        <h2><span class="el-text-left-1">{collefttitle}</span><br style="clear: both"> </h2>
        <div class="el-content">
            <p>{colrighttext}</p>
        </div>
    </div>
    <div style="height: 80px;">&nbsp;</div>
</article>