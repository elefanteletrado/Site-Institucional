<section class="el-banner-container {style}">
    <div class="el-content" style="background-image: url('{image_src}');">
        <div>
            <div>
                <h2>{title}</h2>
                <p>{text}</p>
                <!-- BEGIN BUTTONS -->
                <div class="el-buttons">
                    <!-- BEGIN BUTTON_CONTRAST -->
                    <a id="{button_contrast_id}" class="el-btn-contrast"  href="{button_contrast_url}">
                        {button_contrast_text}
                    </a>
                    <!-- END BUTTON_CONTRAST -->
                    <!-- BEGIN BUTTON_OUTLINE -->
                    <a id="{button_outline_id}" class="el-btn-outline" href="{button_outline_url}">
                        {button_outline_text}
                    </a>
                    <!-- END BUTTON_OUTLINE -->
                </div>
                <!-- END BUTTONS -->
            </div>
        </div>
    </div>
</section>