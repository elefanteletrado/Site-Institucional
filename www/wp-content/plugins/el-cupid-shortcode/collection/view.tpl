<section class="el-collection-rotate hidden-sm hidden-md hidden-lg el-section-collection-state-one fade-effect-rotate" aria-hidden="true" style="height: {mobile_height}px;" data-left-transition="">
    <div class="el-section-collection-content" style="height: {mobile_height}px; width: {mobile_width}px;">
        <img src="{mobile_image_src}" width="{mobile_width}" height="{mobile_height}" style="max-width: {mobile_width}px;" alt="{mobile_image_alt}">
    </div>
</section>
<section class="el-collection-rotate hidden-xs el-section-collection-state-one fade-effect-rotate" aria-hidden="true" style="height: {height}px;" data-left-transition="">
    <div class="el-section-collection-content" style="height: {height}px; width: {width}px;">
        <img src="{image_src}" width="{width}" height="{height}" style="max-width: {width}px;" alt="{image_alt}">
    </div>
</section>